    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jest",
            "sourceMaps": true,
            "program": "${workspaceFolder}/node_modules/react-scripts/scripts/test.js",
            "args": [
                "--env=jsdom",
                "--runInBand"
